# VoXStream - Variables de Entorno

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# OpenAI API (para Whisper transcripción)
OPENAI_API_KEY=tu-api-key-de-openai-aqui

# Google Cloud (para traducción y text-to-speech)
GOOGLE_PROJECT_ID=tu-proyecto-de-google-cloud
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-service-account.json

# Configuración de Archivos
MAX_FILE_SIZE=2147483648  # 2GB en bytes
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
TEMP_DIR=./temp

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=10   # Máximo 10 uploads por ventana

# Configuración de Limpieza Automática
AUTO_CLEANUP_HOURS=1  # Limpiar archivos después de 1 hora

# Configuración de Procesamiento
MAX_CONCURRENT_JOBS=3  # Máximo 3 trabajos simultáneos
CHUNK_SIZE_SECONDS=600  # Chunks de 10 minutos para archivos grandes

# URLs de APIs alternativas (respaldo)
MYMEMORY_API_URL=https://api.mymemory.translated.net/get
MYMEMORY_EMAIL=tu-email@ejemplo.com

# Configuración de Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# Configuración de Seguridad
JWT_SECRET=tu-clave-secreta-jwt-muy-segura
CORS_ORIGIN=*

# Configuración de WebSocket
SOCKET_MAX_BUFFER_SIZE=104857600  # 100MB

# Configuración de FFmpeg
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Configuración de Base de Datos (opcional para jobs persistentes)
# DATABASE_URL=mongodb://localhost:27017/voxstream
# REDIS_URL=redis://localhost:6379